# Package Configuration
# These environment variables are used to configure package metadata
# Set these when building/publishing the package

# Package author information
PACKAGE_AUTHOR=Your Name
PACKAGE_AUTHOR_EMAIL=your.email@example.com

# Repository URLs
PACKAGE_URL=https://github.com/your-org/slackbot-permissions
PACKAGE_BUG_REPORTS=https://github.com/your-org/slackbot-permissions/issues
PACKAGE_SOURCE=https://github.com/your-org/slackbot-permissions
PACKAGE_DOCS=https://slackbot-permissions.readthedocs.io/

# Docker Registry (for CI/CD)
DOCKER_REGISTRY=your-org

# Development Configuration
# These are used during development and testing

# Slack API Configuration (for testing)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Database Configuration (optional)
DATABASE_URL=sqlite:///permissions.db

# Logging Configuration
LOG_LEVEL=INFO
DEBUG=false

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=8080
